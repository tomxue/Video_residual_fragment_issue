<Page
    x:Class="App42.VideoPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App42"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Border BorderBrush="Blue" BorderThickness="3" Width="1000" Height="662" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0">
                <MediaPlayerElement x:Name="VideoObj"  AutoPlay="False" AreTransportControlsEnabled="False"/>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Content="Back to main page" FontSize="60" Height="174" Width="657"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,40,0,0" Click="BackToHome_Click" RenderTransformOrigin="-0.142,0.658"/>
                <Button Content="Switch Room" FontSize="60" Height="174" Width="657"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,40,0,0" Click="SwitchRoom_Click" RenderTransformOrigin="-0.142,0.658"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
